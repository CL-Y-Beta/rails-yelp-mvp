<div class="container mt-5">
<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<div>
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= link_to "add review", new_restaurant_review_path(@restaurant) %>

</div>
<br>
<p><strong>Reviews</strong></p>

<ul class="list-group">

  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> | Rating: <%= review.rating %></li>
  <% end %>
</ul>


<%= render 'reviews/new', restaurant: @restaurant, review: @review if @review.new_record? %>

<!-- Other content of the show view -->
</div>
